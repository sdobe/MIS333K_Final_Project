    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Title)
            </td>
            @*<td> TO-DO: show all interview dates for that company
            @Html.DisplayFor(modelItem => item.Interview.DateTime)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompanyID">Edit</a>
                @*<a asp-action="Create" asp-route-id="@item.CompanyID">Details</a>
            <a asp-action="Delete" asp-route-id="@item.CompanyID">Delete</a>*@
